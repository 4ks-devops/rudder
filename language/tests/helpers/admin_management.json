{
  "type": "ncf_technique",
  "version": 2,
  "data": {
    "id": "Administrators_Management",
    "description": "test",
    "name": "Administrators Management",
    "version": "1.0",
    "parameter": [
      {
        "id": "bbe964b5-5b0a-436d-90ed-8faf7c841b11",
        "name": "login_name",
        "description": "Login for the user"
      }
    ],
    "category": "ncf_techniques",
    "calls": [
      {
        "parameters": [
          {
            "name": "login",
            "value": "${login_name}",
            "$errors": []
          }
        ],
        "condition": "any",
        "method": "user_present",
        "component": "User present"
      },
      {
        "parameters": [
          {
            "name": "file",
            "value": "/etc/sudoers",
            "$errors": []
          },
          {
            "name": "lines",
            "value": "${login_name}:${login_name} FULL",
            "$errors": []
          },
          {
            "name": "enforce",
            "value": "true",
            "$errors": []
          }
        ],
        "condition": "any",
        "method": "file_content",
        "component": "File content"
      },
      {
        "parameters": [
          {
            "name": "service_name",
            "value": "sshd",
            "$errors": []
          }
        ],
        "condition": "any.(user_present_${login_name}_repaired)",
        "method": "service_restart",
        "component": "Service restart"
      }
    ]
  }
}
