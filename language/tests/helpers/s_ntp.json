{
  "type": "ncf_technique",
  "version": 2,
  "data": {
    "name": "NTP Technique",
    "description": "Configure the NTP",
    "version": "1.1",
    "id": "NTP_Technique",
    "parameter": [],
    "bundle_args": [],
    "calls": [
      {
        "method": "package_install",
        "condition": "any",
        "args": [
          "ntp"
        ],
        "component": "Package install"
      },
      {
        "method": "file_ensure_lines_present",
        "condition": "any",
        "args": [
          "/etc/ntp.conf",
          "server pool.ntp.org"
        ],
        "component": "File ensure lines present"
      },
      {
        "method": "service_restart",
        "condition": "file_ensure_lines_present__etc_ntp_conf_repaired",
        "args": [
          "ntp"
        ],
        "component": "Service restart"
      }
    ]
  }
}
