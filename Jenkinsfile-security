@Library('slack-notification')
import org.gradiant.jenkins.slack.SlackNotifier

// Check vulns in dependencies on repo branches

pipeline {
    agent none
    triggers { cron('@daily') }

    stages {
        stage('deps-webapp') {
            //when { not { changeRequest() } }
            agent { label 'scala' }
            steps {
                dir('webapp/sources') {
                    withMaven(options: [artifactsPublisher(disabled: true)]) {
                        sh script: 'mvn -DfailBuildOnCVSS=11 -DcveValidForHours=100 org.owasp:dependency-check-maven:6.1.5:aggregate', label: "check webapp dependencies"
                    }
                }
            }
            post {
                always {
            		archiveArtifacts artifacts: 'webapp/sources/target/dependency-check-report.html'
                    script {
                        new SlackNotifier().notifyResult("scala-team")
                    }
                }
            }
        }
        stage('deps-relayd') {
            when { not { changeRequest() } }
            agent { label 'rust' }
            steps {
                dir('relay/sources/relayd') {
                    sh script: 'cargo deny check', label: 'check relayd dependencies'
                }
            }
            post {
                always {
                    script {
                        new SlackNotifier().notifyResult("rust-team")
                    }
                }
            }
        }
        stage('deps-language') {
            when { not { changeRequest() } }
            agent { label 'rust' }
            steps {
                dir('rudder-lang') {
                    sh script: 'cargo deny check', label: 'check language dependencies'
                }
            }
            post {
                always {
                    script {
                        new SlackNotifier().notifyResult("rust-team")
                    }
                }
            }
        }
    }
}
