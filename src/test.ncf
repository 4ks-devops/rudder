@format=0

resource file(p)

file state permissions(u,g,m) { }

global enum os {
  ubuntu,
  debian
}

resource ntp ()

ntp state configuration ()
{
  file("/tmp").permissions("root", "root", "g+w")

  case {
    ubuntu => file("/tmp").permissions("root", "root", "g+w"),
    debian => file("/tmp").permissions("user", "user", "g+w")
  }
}
